# ====================================
# BACKEND ENVIRONMENT CONFIGURATION
# ====================================
# Copy this file to .env and update with your values

# --- Application Settings ---
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000

# --- Database Configuration ---
MONGO_URI=mongodb://localhost:27017/welfvita-store
MIN_POOL_SIZE=2
MAX_POOL_SIZE=10

# --- JWT Authentication ---
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# --- CORS Configuration ---
# Add all your frontend URLs separated by commas
CLIENT_URL=http://localhost:5173,http://localhost:3000,http://localhost:3001

# --- Cloudinary Configuration (for image uploads) ---
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# --- Email Configuration (SMTP) ---
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM_NAME=Welfvita Store
EMAIL_FROM_EMAIL=noreply@welfvita.com
EMAIL_SECURE=false

# --- Payment Gateway (Zarinpal) ---
ZARINPAL_MERCHANT_ID=your-merchant-id
ZARINPAL_SANDBOX=true
ZARINPAL_CALLBACK_URL=http://localhost:5173/payment/callback

# --- Shop Settings ---
FREE_SHIPPING_THRESHOLD=500000
SHIPPING_PRICE=50000
TAX_RATE=0.09

# --- Pagination ---
PAGE_LIMIT_DEFAULT=12
PAGE_LIMIT_MAX=100

# --- Upload Settings ---
UPLOAD_MAX_MB=5
MAX_PRODUCT_IMAGES=10

# --- Cache Settings ---
CACHE_TTL=300
CACHE_PRODUCTS_TTL=600
CACHE_CATEGORIES_TTL=1800
CACHE_PROFILE_TTL=300
CACHE_MAX_HEAP_MB=256

# --- Rate Limiting ---
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX=5

# --- Security ---
HELMET_CSP=false
BCRYPT_SALT_ROUNDS=12
PASSWORD_MIN_LENGTH=6
PASSWORD_MAX_LENGTH=128
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCK_TIME=900000

# --- Logging ---
LOG_LEVEL=info
LOG_TO_FILE=true
